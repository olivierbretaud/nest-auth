{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": ["**", "!!**/dist"]
	},
	"formatter": {
		"enabled": true,
    "lineWidth": 80,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error"
			},
      "style": {
        "useImportType": "off"
      }
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
      "semicolons": "always"
		},
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "off"
			}
		}
	}
}
